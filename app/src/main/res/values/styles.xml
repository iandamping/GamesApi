<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="font">@font/lato</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="rightTopCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
    </style>

    <style name="bottomLeftCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">80dp</item>
    </style>

    <style name="bottomCustomCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">70dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="onlyonecorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="allRounder">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>

    </style>

</resources>
